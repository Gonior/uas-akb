<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:id="@+id/containerItemAnimeSearch"
    android:layout_marginBottom="5dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imgAnimeSearch"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/_1155e9a057f661774441c9ec518f66c"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#CD000000"
        android:layout_above="@id/tvTitleAnimeSearch"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvScoreAnimeSearch"
                android:layout_width="wrap_content"
                android:text="7.8"
                android:textSize="18sp"
                android:textColor="@color/white"

                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="2dp"
                android:src="@drawable/ic_baseline_star_24_white"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMemberAnimeSearch"
                android:layout_width="wrap_content"
                android:text="123.456"
                android:textSize="14sp"
                android:textColor="@color/white"

                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_baseline_group_24"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTitleAnimeSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/imgAnimeSearch"
        android:paddingHorizontal="5dp"
        android:textColor="@color/black"

        android:text="title of anime"
         />

</RelativeLayout>